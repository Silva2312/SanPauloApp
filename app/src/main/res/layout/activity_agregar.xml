<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoagregar"
    android:id="@+id/magre"
    android:gravity="center"
    tools:context=".Agregar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/agregarr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/nombres"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/alatsi"
                android:gravity="start|center_vertical"
                android:hint="Nombres"
                android:padding="16dp"
                android:textColor="@color/lavender" />

            <EditText
                android:id="@+id/apellido1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/alatsi"
                android:gravity="start|center_vertical"
                android:hint="Apellido Paterno"
                android:padding="16dp"
                android:textColor="@color/lavender" />

            <EditText
                android:id="@+id/apellido2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/alatsi"
                android:gravity="start|center_vertical"
                android:hint="Apellido Materno"
                android:padding="16dp"
                android:textColor="@color/lavender" />

            <EditText
                android:id="@+id/domicilio"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/alatsi"
                android:gravity="start|center_vertical"
                android:hint="Domicilio"
                android:padding="16dp"
                android:textColor="@color/lavender" />

            <EditText
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/alatsi"
                android:gravity="start|center_vertical"
                android:hint="Numero telefono"
                android:padding="16dp"
                android:textColor="@color/lavender" />
            <!-- Spinner de turno -->
            <Spinner
                android:id="@+id/turnoSpinner"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/lavender_border"
                android:entries="@array/turno_options"
                android:padding="16dp" />

            <!-- Spinner de cargo -->
            <Spinner
                android:id="@+id/cargoSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/lavender_border"
                android:entries="@array/cargo_options"
                android:padding="16dp" />

            <EditText
                android:id="@+id/codigot"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/alatsi"
                android:gravity="start|center_vertical"
                android:hint="Codigo"
                android:padding="16dp"
                android:textColor="@color/lavender" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/lavender"
                android:text="Guardar"
                android:textSize="18sp"
                app:cornerRadius="20dp" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
